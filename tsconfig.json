{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true, // Skips type checking of declaration files
		"types": [
			"bun"
		] // Explicitly include only Bun types
	},
	"exclude": [
		"node_modules"
	]
}